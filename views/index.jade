extends layout

block content
  .slides
    .slide.center-both.main(data-pos = 0 style="left:0px")
      .first-row.center-both.flex-direction-row(data-animate='fadeInDown')
        img(src="/images/pic_logo.svg")
        img(src="/images/logo.svg")
      h1.second-row.font-size-40.bold.letter-spacing(data-animate='fadeInUp')
        | [ Seguridad e identidad ]
      
    .slide.center-both(data-pos = 1 style="left:100vw")
      .avatar(data-animate='flipInY')
      h1.font-size-40.bold.letter-spacing(data-animate='fadeInLeft')
        | Hugo Farji
      h2.bold.text-center(data-animate='fadeInLeft')
        | Desarrolador web
        br
        | Github / Twitter: @hdf1986
    .slide.center-both(data-pos = 2 style="left:200vw")
      .avatar
      h1.font-size-40.bold.letter-spacing
        | Hugo Farji
      h2.bold.text-center
        | Desarrolador web
        br
        | Github / Twitter: @hdf1986
